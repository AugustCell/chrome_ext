{
	"manifest_version": 2,
	"version": "1.0",
	"name": "Clean Demon",
	"description": "Worried about keeping your computer secure? Browse at peace with
	clean demon detecting all attacks on your computer!",
	"icons": {
		"128": "broom.png"
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": [
			"pinkattack.js"
		]
	}],
	"background": {
		"scripts": [
      "initialization.js",
			"background.js"
    ],
    "persistent": false
	},

	"browser_action": {
      "default_title": "Have a good day"
  },

  "permissions": [
      "activeTab",
      "history",
      "storage",
			"cookies",
			"downloads"
  ]

}
